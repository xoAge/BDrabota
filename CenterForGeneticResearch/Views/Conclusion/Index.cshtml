@model ConclusionFilterVM

@{
    ViewData["Title"] = "Заключения";
}

<div class="container">
    <div class="row pt-3 pb-2">
        <div class="col-6">
            <h2 class="text-dark">
                @ViewData["Title"]
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Conclusion" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Добавить заключение
            </a>
        </div>
    </div>

    <form method="get" asp-action="Index" class="mb-4">
        <div class="row">
            <div class="col-md-5 mb-2">
                <input type="text" name="testNameFilter" value="@Model.TestNameFilter"
                       class="form-control" placeholder="Поиск по названию теста" />
            </div>
            <div class="col-md-5 mb-2">
                <input type="date" name="conclusionDateFilter" 
                       value="@(Model.ConclusionDateFilter?.ToString("yyyy-MM-dd"))"
                       class="form-control" placeholder="Дата заключения" />
            </div>
            <div class="col-md-2 mb-2">
                <button type="submit" class="btn btn-dark w-100">
                    <i class="bi bi-search"></i> Найти
                </button>
            </div>
        </div>
    </form>

    <table class="table table-hover table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>Название теста</th>
                <th>Дата заключения</th>
                <th>Краткое содержание</th>
                <th>Рекомендации</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var conclusion in Model.Conclusions)
            {
                <tr>
                    <td>@conclusion.GeneticTest?.TestName</td>
                    <td>@conclusion.ConclusionDate.ToString("d")</td>
                    <td>@(conclusion.Summary)</td>
                    <td>@(conclusion.Recommendations)</td>
                    <td>
                        <div class="btn-group gap-2" role="group">
                            <a asp-action="Update" asp-route-id="@conclusion.Id" 
                               class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Изменить
                            </a>
                            <a onclick="Delete('@Url.Action("Delete", "Conclusion", new { id = conclusion.Id })')" 
                               class="btn btn-danger">
                                <i class="bi bi-trash"></i> Удалить
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>