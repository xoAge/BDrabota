@model Employee

@{
    ViewData["Title"] = "Подробная информация о сотруднике";
    var photoPath = Model.EmployeeType.GetEmployeePhoto();
}

<div class="container">
    <div class="row pt-3 pb-2">
        <div class="col-6">
            <h2 class="text-dark">@ViewData["Title"]</h2>
        </div>
    </div>

    <div class="card mb-4">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@photoPath" class="img-fluid rounded-start" alt="Фото сотрудника" style="max-height: 400px; object-fit: cover;">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">@Model.LastName @Model.FirstName @Model.MiddleName</h3>
                    <p class="text-muted">@Model.EmployeeType.GetDisplayName()</p>

                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Контактная информация</h5>
                            <p><strong>Email:</strong> @Model.Email</p>
                            <p><strong>Телефон:</strong> @Model.Phone</p>
                            <p><strong>Дата рождения:</strong> @Model.BirthDate.ToString("d")</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Рабочая информация</h5>
                            <p><strong>Дата найма:</strong> @Model.HireDate.ToString("d")</p>
                            <p><strong>Опыт работы:</strong> @Model.WorkExperience лет</p>

                            <div class="d-flex align-items-center mt-3">
                                <div class="bg-primary bg-opacity-10 p-3 rounded me-3">
                                    <i class="bi bi-people-fill text-primary fs-4"></i>
                                </div>
                                <div>
                                    <p class="mb-0 text-muted small">Уникальных пациентов</p>
                                    <h4 class="mb-0">@(ViewBag.UniquePatientsCount ?? 0)</h4>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mt-3">
                                <div class="bg-success bg-opacity-10 p-3 rounded me-3">
                                    <i class="bi bi-graph-up text-success fs-4"></i>
                                </div>
                                <div>
                                    <p class="mb-0 text-muted small">Индекс эффективности</p>
                                    <h4 class="mb-0">@(ViewBag.EfficiencyIndex?.ToString("F2") ?? "0.00")</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <h5>Биография</h5>
                    <p class="card-text">@Model.Bio</p>

                    <!-- Убрали блок со старой статистикой, так как теперь используем только индекс эффективности -->

                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header bg-dark text-white">
                                    <h5 class="mb-0">Показатель эффективности</h5>
                                </div>
                                <div class="card-body">
                                    <div class="text-center">
                                        <div class="bg-light p-4 rounded">
                                            <h1 class="display-4 text-primary">@(ViewBag.EfficiencyIndex?.ToString("F2") ?? "0.00")</h1>
                                            <p class="lead mb-0">Общий индекс эффективности сотрудника</p>
                                            <small class="text-muted">
                                                Рассчитывается на основе количества тестов, пациентов, исследованных генов и опыта работы
                                            </small>
                                        </div>
                                    </div>

                                    <div class="row mt-4">
                                        <div class="col-md-6">
                                            <p><strong>Уникальных пациентов:</strong> @(ViewBag.UniquePatientsCount ?? 0)</p>
                                            <p><strong>Опыт работы:</strong> @Model.WorkExperience лет</p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>Индекс эффективности:</strong> @(ViewBag.EfficiencyIndex?.ToString("F2") ?? "0.00")</p>
                                            <p><strong>Дата найма:</strong> @Model.HireDate.ToString("d")</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Назад к списку
                        </a>
                        <a asp-controller="Employee" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil-square"></i> Редактировать
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>