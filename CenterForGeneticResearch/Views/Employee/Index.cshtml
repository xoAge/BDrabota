@model EmployeeFilterVM

@{
    ViewData["Title"] = "Сотрудники";
}

<div class="container">
    <div class="row pt-3 pb-2">
        <div class="col-6">
            <h2 class="text-dark">
                Сотрудники
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Добавить сотрудника
            </a>
        </div>
    </div>

    <form method="get" asp-action="Index" class="mb-4">
        <div class="row">
            <div class="col-md-8 mb-2">
                <input type="text" name="nameFilter" value="@Model.NameFilter"
                       class="form-control" placeholder="Поиск по ФИО" />
            </div>
            <div class="col-md-2 mb-2">
                <select name="typeFilter" class="form-select">
                    <option value="">Все должности</option>
                    <option value="Geneticist" selected="@(Model.TypeFilter == "Geneticist")">Генетик</option>
                    <option value="Doctor" selected="@(Model.TypeFilter == "Doctor")">Врач</option>
                    <option value="Nurse" selected="@(Model.TypeFilter == "Nurse")">Медсестра</option>
                    <option value="LabTechnician" selected="@(Model.TypeFilter == "LabTechnician")">Лаборант</option>
                    <option value="Researcher" selected="@(Model.TypeFilter == "Researcher")">Исследователь</option>
                    <option value="Administrator" selected="@(Model.TypeFilter == "Administrator")">Администратор</option>
                </select>
            </div>
            <div class="col-md-2 mb-2">
                <button type="submit" class="btn btn-dark w-100">
                    <i class="bi bi-search"></i> Найти
                </button>
            </div>
        </div>
    </form>

    <table class="table table-hover table-bordered text-center align-middle">
        <thead class="table-dark">
        <tr>
            <th>ФИО</th>
            <th>Должность</th>
            <th>Email</th>
            <th>Телефон</th>
            <th>Опыт работы</th>
            <th>Дата найма</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.LastName @employee.FirstName @employee.MiddleName</td>
                <td>@employee.EmployeeType.GetDisplayName()</td>
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td>@employee.WorkExperience лет</td>
                <td>@employee.HireDate.ToString("d")</td>
                <td>
                    <div class="btn-group gap-2" role="group">
                        <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-info">
                            Подробнее
                        </a>
                        <a asp-controller="Employee" asp-action="Update" asp-route-id="@employee.Id" class="btn btn-warning">
                            Изменить
                        </a>
                        <a onclick="Delete('@Url.Action("delete", "Employee", new { id = employee.Id })')" class="btn btn-danger">
                            Удалить
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>