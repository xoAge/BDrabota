@model PatientFilterVM

@{
    ViewData["Title"] = "Пациенты";
}

<div class="container">
    <div class="row pt-3 pb-2">
        <div class="col-6">
            <h2 class="text-dark">Пациенты</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Patient" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Добавить пациента
            </a>
        </div>
    </div>

    <form method="get" asp-action="Index" class="mb-4">
        <div class="row">
            <div class="col-md-8 mb-2">
                <input type="text" name="nameFilter" value="@Model.NameFilter"
                       class="form-control" placeholder="Поиск по ФИО" />
            </div>
            <div class="col-md-2 mb-2">
                <select name="genderFilter" class="form-select">
                    <option value="">Все</option>
                    <option value="Male" selected="@(Model.GenderFilter == "Male")">Мужской</option>
                    <option value="Female" selected="@(Model.GenderFilter == "Female")">Женский</option>
                    <option value="Other" selected="@(Model.GenderFilter == "Other")">Другое</option>
                </select>
            </div>
            <div class="col-md-2 mb-2">
                <button type="submit" class="btn btn-dark w-100">
                    <i class="bi bi-search"></i> Найти
                </button>
            </div>
        </div>
    </form>

    <table class="table table-hover table-bordered text-center align-middle">
        <thead class="table-dark">
        <tr>
            <th>ФИО</th>
            <th>Пол</th>
            <th>Дата рождения</th>
            <th>Телефон</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var patient in Model.Patients)
        {
            <tr>
                <td>@patient.LastName @patient.FirstName @patient.MiddleName</td>
                <td>@patient.Gender.GetDisplayName()</td>
                <td>@patient.BirthDate.ToString("d")</td>
                <td>@patient.Phone</td>
                <td>
                    <div class="btn-group gap-2" role="group">
                        <a asp-action="Update" asp-route-id="@patient.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Изменить
                        </a>
                        <a onclick="Delete('@Url.Action("delete", "Patient", new { id = patient.Id })')" class="btn btn-danger">
                            <i class="bi bi-trash"></i>Удалить
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>