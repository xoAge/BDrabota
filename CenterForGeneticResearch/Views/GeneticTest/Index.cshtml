@model GeneticTestFilterVM

@{
    ViewData["Title"] = "Генетические тесты";
}

<div class="container">
    <div class="row pt-3 pb-2">
        <div class="col-6">
            <h2 class="text-dark">
                Генетические тесты
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="GeneticTest" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Добавить тест
            </a>
        </div>
    </div>

    <form method="get" asp-action="Index" class="mb-4">
        <div class="row">
            <div class="col-md-6 mb-2">
                <input type="text" name="patientFilter" value="@Model.PatientFilter"
                       class="form-control" placeholder="Поиск по пациенту (ФИО)" />
            </div>
            <div class="col-md-4 mb-2">
                <input type="text" name="testNameFilter" value="@Model.TestNameFilter"
                       class="form-control" placeholder="Поиск по названию теста" />
            </div>
            <div class="col-md-2 mb-2">
                <button type="submit" class="btn btn-dark w-100">
                    <i class="bi bi-search"></i> Найти
                </button>
            </div>
        </div>
    </form>

    <table class="table table-hover table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>Название теста</th>
                <th>Пациент</th>
                <th>Гены</th>
                <th>Дата проведения</th>
                <th>Метод анализа</th>
                <th>Результат</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.GeneticTests)
        {
            <tr>
                <td>@item.Test.TestName</td>
                <td>@item.Test.GeneticSample.Patient.LastName @item.Test.GeneticSample.Patient.FirstName</td>
                <td>@string.Join(", ", item.GeneNames)</td>
                <td>@item.Test.ConductDate.ToString("d")</td>
                <td>@item.Test.AnalysisMethod</td>
                <td>@(item.Test.Result?.Length > 20 ? item.Test.Result.Substring(0, 20) + "..." : item.Test.Result)</td>
                <td>
                    <div class="btn-group gap-2" role="group">
                        <a asp-controller="GeneticTest" asp-action="Details" asp-route-id="@item.Test.Id" class="btn btn-info">
                            Подробнее
                        </a>
                        <a asp-controller="GeneticTest" asp-action="Update" asp-route-id="@item.Test.Id" class="btn btn-warning">
                            Изменить
                        </a>
                        <a onclick="Delete('@Url.Action("delete", "GeneticTest", new { id = item.Test.Id })')" class="btn btn-danger">
                            Удалить
                        </a>
                    </div>
                    </td>
            </tr>
        }
        </tbody>
    </table>
</div>