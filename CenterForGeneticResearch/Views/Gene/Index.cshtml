@model GeneFilterVM

@{
    ViewData["Title"] = "Гены";
}

<div class="container">
    <div class="row pt-3 pb-2">
        <div class="col-6">
            <h2 class="text-dark">
                Гены
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Gene" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Добавить ген
            </a>
        </div>
    </div>

    <form method="get" asp-action="Index" class="mb-4">
        <div class="row">
            <div class="col-md-10 mb-2">
                <input type="text" name="nameFilter" value="@Model.NameFilter"
                       class="form-control" placeholder="Поиск по названию гена" />
            </div>
            <div class="col-md-2 mb-2">
                <button type="submit" class="btn btn-dark w-100">
                    <i class="bi bi-search"></i> Найти
                </button>
            </div>
        </div>
    </form>

    <table class="table table-hover table-bordered text-center align-middle">
        <thead class="table-dark">
        <tr>
            <th>Название</th>
            <th>Функция</th>
            <th>Связанные заболевания</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var gene in Model.Genes)
        {
            <tr>
                <td>@gene.Name</td>
                <td>@gene.Function</td>
                <td>@gene.RelatedDiseases</td>
                <td>
                    <div class="btn-group gap-2" role="group">
                        <a asp-controller="Gene" asp-action="Update" asp-route-id="@gene.Id" class="btn btn-warning">
                            Изменить
                        </a>
                        <a onclick="Delete('@Url.Action("delete", "Gene", new { id = gene.Id })')" class="btn btn-danger">
                            Удалить
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>